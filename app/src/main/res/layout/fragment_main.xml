<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ui.fragments.MainFragment">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fragment_main_bt_otp_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        android:text="@string/otp_service" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fragment_main_bt_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        android:text="@string/start_timer" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fragment_main_bt_schedule_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_margin="@dimen/_20sdp"
        android:text="@string/schedule_notification" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fragment_main_bt_flow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_margin="@dimen/_20sdp"
        android:text="@string/news_flows" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fragment_main_bt_download_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_margin="@dimen/_20sdp"
        android:text="@string/download_notification" />

    <ImageView
        android:id="@+id/fragment_main_iv"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp" />

    <Button
        android:id="@+id/fragment_main_tb_work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_margin="@dimen/_10sdp"
        android:text="enable work manager"
        />


</GridLayout>